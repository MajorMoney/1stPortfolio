---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Body from "../components/Body.astro";
import Content from "../components/Content.astro";

export interface Props {
    content: {
        title?: string;
        prev?: string;
        description?: string;
        devDate?: string;
        updateDate?: string;
        url?: string;
        hero?: string;
        secondHero?: string;
    };
}

const {
    content: { title, description, prev, devDate,updateDate, url, hero, secondHero },
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead title={title} description={description} image={hero} />
    </head>

    <Body>
        <Header />
        <main class="pt-[56px] ">
            <Content className="pt-6 ">
                <div class="mb-8 ">
                    {
                            <img
                                class="self-center border-[3px] border-dark-pele dark:border-dark-pele rounded-xl"
                                width={720}
                                height={360}
                                src={hero}
                                alt=""
                            />
                    }
                </div>
                <h1 class="text-3xl my-1 font-mplus">{title}</h1>
                <div>Last updated{updateDate}</div>
                <hr class="border-top border-zinc-400 my-4" />
                <slot />
                <span
                    class="underline underline-offset-2 hover:text-orange-500 decoration-orange-500 text-2xl"
                ></span>
                <div class="mb-8">{description}</div>
            </Content>
        </main>
        <Footer />
    </Body>
</html>
